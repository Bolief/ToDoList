<h2>Delete ToDo Item</h2>

<div>
    <h4>Are you sure you want to delete this item?</h4>
    <h4>@Model.Title</h4>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <input type="submit" value="Delete" />
    </div>
    <a asp-action="Index">Cancel</a>
</form>

